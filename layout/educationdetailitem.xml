<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
      xmlns:tools="http://schemas.android.com/tools"
    >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="341dp"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="@color/white"
        android:background="@drawable/container_border"
        android:layout_height="485dp"
        android:orientation="vertical"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="21dp">

        <EditText
            android:id="@+id/graduationEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:autofillHints=""

            android:background="@drawable/edittext_border"
            android:hint="graduation/10/12"
            android:paddingStart="20dp"
            android:textSize="20dp"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/courseNameEditText1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"

            android:background="@drawable/edittext_border"
            android:hint="Course Name"
            android:importantForAutofill="no"
            android:paddingStart="20dp"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/coursespecificationEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"

            android:background="@drawable/edittext_border"
            android:hint="course specification"
            android:importantForAutofill="no"
            android:paddingStart="20dp"
            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields" />

        <EditText
            android:id="@+id/courseinstituteNameEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="College/school/university"
            android:importantForAutofill="no"
            android:paddingStart="20dp"

            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/coursegradesEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="Passing Grades in cgpa"
            android:importantForAutofill="no"
            android:paddingStart="20dp"

            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/coursestartrearEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="Start year"
            android:importantForAutofill="no"
            android:paddingStart="20dp"
            android:textSize="20dp"

            tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/courseendyearEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/edittext_border"
            android:hint="End year"
            android:importantForAutofill="no"
            android:paddingStart="20dp"

            android:textSize="20sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields" />


        <!-- Add EditText fields for specification, college/school name, grades, starting year, end year -->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>