<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingDefaultResource" >
    <LinearLayout
        android:layout_width="match_parent"

        android:orientation="vertical"
        android:layout_height="wrap_content"
>

        <Button
            android:id="@+id/backbutton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/back"
            tools:ignore="MissingConstraints,SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <ImageView
    android:layout_width="wrap_content"
    android:layout_height="100dp"
    android:src="@drawable/detailslogo"/>
        <LinearLayout

        android:layout_width="370dp"
        android:layout_height="wrap_content"

     android:layout_marginStart="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/backbutton"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="20dp">


        <TextView
            android:id="@+id/displayjobtitle"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:text="title"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/displayjobcomp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"

            android:text="company name"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />


        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Job Details"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
android:layout_marginTop="6dp"
            android:background="@drawable/edittext_border"

            android:orientation="vertical"
android:layout_marginStart="25dp"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="place           :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
                <TextView
                    android:id="@+id/displayjobloc"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="palce :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="salary          :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck,TextContrastCheck" />
                <TextView
                    android:id="@+id/displayjobsalary"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="palce :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="Mode           :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
                <TextView
                    android:id="@+id/displayjobtype"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="palce :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="13dp"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="Shift             :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
                <TextView
                    android:id="@+id/displayjobshift"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="shift :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>



        </LinearLayout>
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Job Details"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <TextView
            android:background="@drawable/edittext_border"
            android:padding="20dp"
            android:id="@+id/displayjobdec"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:text="des"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:text="Company Details"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,RtlHardcoded" />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext_border"

            android:orientation="vertical"
            android:layout_marginStart="25dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="111dp"
                    android:layout_height="wrap_content"

                    android:text="Details         :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

                <TextView
                    android:id="@+id/displaycompanydetails"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="Experience :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="12dp"

                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="104dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="company     :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
                <TextView
                    android:id="@+id/displaycompanyname"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="Opening :"


                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="13dp"
                android:layout_marginStart="12dp"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="106dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:text="Headquarter:"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />

                <TextView
                    android:id="@+id/displaycomploc"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="Headquarter :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="13dp"
                tools:ignore="MissingConstraints">

                <TextView

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="contact          :"
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck" />
                <TextView
                    android:id="@+id/displaycompanycontact"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"


                    android:text="contact "
                    android:textSize="15sp"

                    tools:ignore="HardcodedText,RtlHardcoded" />
            </LinearLayout>
        </LinearLayout>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Job Benefits"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:background="@drawable/edittext_border"
                android:padding="20dp"
                android:id="@+id/displayjobben"
                android:layout_width="300dp"
                android:layout_marginBottom="30dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="5dp"
                android:text="des"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />


        </LinearLayout>


        <Button
            android:id="@+id/apply"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginStart="150dp"
            android:layout_marginTop="30dp"
            android:text="Apply"
            android:textColor="@color/white"
            android:textSize="15sp"
            tools:ignore="HardcodedText,TextSizeCheck,TextContrastCheck" />


    </LinearLayout>

</ScrollView >