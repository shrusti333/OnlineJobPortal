<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context=".cHomePage">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <LinearLayout

        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JobHiveHub"
            android:textColor="@color/darkblue"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="20dp"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,MissingConstraints,TextSizeCheck"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="345dp" />


        <Button
            android:id="@+id/logout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="160dp"
            android:background="@drawable/logout2_foreground"


            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/red"
                android:layout_marginStart="20dp"
                android:layout_marginTop="12dp"
                android:text="Add "

                app:layout_constraintTop_toBottomOf="@+id/container"
                tools:ignore="ButtonStyle,HardcodedText,MissingConstraints,TextContrastCheck"
                tools:layout_editor_absoluteX="29dp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/userRecycleView"
            android:layout_width="match_parent"
            android:layout_height="23938dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="364dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"

            app:layout_constraintStart_toStartOf="parent" />


    </LinearLayout>
    </LinearLayout>
</ScrollView>