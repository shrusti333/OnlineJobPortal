<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="341dp"
        android:layout_height="290dp"
android:layout_marginTop="10dp"
        android:background="@drawable/container_border"
        android:orientation="vertical"
        android:padding="10dp"
android:backgroundTint="@color/white"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="21dp">

        <EditText
            android:id="@+id/projectname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:autofillHints="no"
            android:background="@drawable/edittext_border"
            android:hint="Project name"
            android:paddingStart="20dp"

            android:textSize="17dp"
            tools:ignore="HardcodedText,RtlSymmetry,SpUsage,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/projectdetails"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="Project Details"
            android:importantForAutofill="no"
            android:paddingStart="20dp"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TextSizeCheck" />

        <EditText
            android:id="@+id/skillsused"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="Key Skill"
            android:importantForAutofill="no"
            android:paddingStart="20dp"

            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields" />

        <EditText
            android:id="@+id/url"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edittext_border"
            android:hint="URL"
            android:importantForAutofill="no"
            android:paddingStart="20dp"
            android:textSize="17sp"
            tools:ignore="HardcodedText,RtlSymmetry,TextFields,TextSizeCheck" />


        <!-- Add EditText fields for specification, college/school name, grades, starting year, end year -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>